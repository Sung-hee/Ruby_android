<style>
  html, body {
    height: 100%; overflow: hidden;
  }
  div {
    height: 100%; border: 1px;
  }
</style>

<div class="container" style="background-color: #eeeeee;">
  <div class="card-body">
    <form actions="/users/sign_in" method: "get">
      <div class="text-center">
        <label style="color:red; font-size: 0.9rem;"><%= session[:error] %></label>
      </div>
      <div class="field mb-3">
        <input type="text" id="id" name="id" style="width:100%; height:2.5rem; font-size: 0.8rem; padding:0.8rem;", placeholder= "아이디를 입력하세요"/> 
      </div>
    
      <div class="field">
        <input type="password" id="pwd" name="pwd" style="width:100%; height:2.5rem; font-size: 0.8rem; padding:0.8rem;", placeholder= "비밀번호를 입력하세요"/> 
      </div>
    
      <div class="field mt-3">
      </div>
      
      <div class="actions mt-3">
        <input type="submit" class="btn btn btn-block text-white" style="background-color: #91180b; height:3.0rem;" value="로그인"/> 
      </div>
    </form>
      
    <div class="actions mt-3">
      <form actions="/users/sign_up" method="get">
        <input type="button" class="btn btn btn-block text-white" style="background-color: #FFC000; height: 3.0rem; color: #333;" value="회원가입" onclick="window.location.href='/users/sign_up'"/> 
      </form>
    </div>
  </div>
</div>